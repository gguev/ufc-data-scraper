{
  "name": "ufc-data-scraper",
  "version": "1.0.5",
  "description": "A web scraper that fetches fighters, events, rankings, records, and detailed fight statistics from UFC.com.",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "bun test --timeout 120000",
    "test:watch": "bun test --watch --timeout 120000",
    "test:coverage": "bun test --coverage --timeout 120000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gguev/ufc-data-scraper"
  },
  "keywords": [
    "ufc",
    "mma",
    "ufc-scraper",
    "puppeteer",
    "scraping",
    "scraper",
    "ufc-stats",
    "ufc-rankings",
    "ufc-fighters",
    "mixed-martial-arts",
    "sports-api",
    "data-scraping"
  ],
  "author": "Guillermo Guevara",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "^1.3.4",
    "@types/cheerio": "^1.0.0",
    "typescript": "^5.9.2",
    "ultracite": "^6.3.9"
  },
  "bugs": {
    "url": "https://github.com/gguev/ufc-data-scraper/issues"
  },
  "homepage": "https://github.com/gguev/ufc-data-scraper#readme",
  "dependencies": {
    "cheerio": "^1.1.2",
    "puppeteer": "^24.32.0"
  },
  "private": true
}
